<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ChatClient.Views.SubscriptionWindow"
        Title="Подписки"
        Width="400" Height="500">

  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Выберите пользователей:" FontWeight="Bold" />
    
    <ListBox ItemsSource="{Binding Users}" Height="350">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <CheckBox Content="{Binding Username}" IsChecked="{Binding IsChecked}" />
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <Button Content="Продолжить" Command="{Binding ConfirmCommand}" />
  </StackPanel>
</Window>
