<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ChatClient.Views.ChatView">
    <DockPanel Margin="10">

        <!-- Верхняя панель -->
        <StackPanel DockPanel.Dock="Top" Margin="0 0 0 10">
            <!-- Имя пользователя -->
            <TextBlock Text="{Binding Username, StringFormat=Вы вошли как: {0}}"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0 0 0 5"/>

            <!-- Кнопка обновления -->
            <Button Content="Обновить подписки"
                    Command="{Binding RefreshSubscriptionsCommand}"
                    HorizontalAlignment="Left"
                    Width="160"
                    Margin="0 0 0 10"/>

            <!-- Выбор получателя -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Кому:" VerticalAlignment="Center" Margin="0 0 10 0"/>
                <ComboBox Width="200"
                          ItemsSource="{Binding OnlineUsers}"
                          SelectedItem="{Binding SelectedUser}" />
            </StackPanel>
        </StackPanel>

        <!-- Список сообщений -->
        <ListBox ItemsSource="{Binding Messages}" Margin="0 0 0 10" Height="300">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Поле ввода и кнопка отправки -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <TextBox Width="275" Text="{Binding Message}" Watermark="Введите сообщение..." />
            <Button Content="Отправить" Command="{Binding SendCommand}" Margin="10 0 0 0"/>
        </StackPanel>

        <StackPanel>

        </StackPanel>
        
    </DockPanel>
</UserControl>
